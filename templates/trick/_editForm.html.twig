
{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.trickCategory) }}

    <h4>Images</h4>
    <ul
            class="pictures"
            data-index="{{ form.newTrickImages|length > 0 ? form.newTrickImages|last.vars.name + 1 : 0 }}"
            data-prototype="{{ form_widget(form.newTrickImages.vars.prototype)|e('html_attr') }}"
    >
        <button type="button" class="add_item_link" data-collection-holder-class="pictures">Ajouter une image</button>
        {% for image in form.newTrickImages %}
            {% if not image.name %}
                <li class="item">{{ form_row(image.name) }}</li>
                <li class="item">{{ form_row(image.file) }}</li>
                {{ form_errors(image) }}
            {% endif %}
        {% endfor %}
    </ul>

    <h4>Videos</h4>
    <ul
            class="videos"
            data-index="{{ form.newTrickVideos|length > 0 ? form.newTrickVideos|last.vars.name + 1 : 0 }}"
            data-prototype="{{ form_widget(form.newTrickVideos.vars.prototype)|e('html_attr') }}"
    >
        <button type="button" class="add_item_link" data-collection-holder-class="videos">Ajouter une video</button>
        {% for video in form.newTrickVideos %}
            <li class="item">{{ form_row(video.name) }}</li>
            <li class="item">{{ form_row(video.url) }}</li>
            <li class="item">{{ form_row(video.provider) }}</li>
        {% endfor %}
    </ul>

    <button class="btn btn-primary">
        <i class="fa fa-save"></i>
        Enregistrer les modifications
    </button>
{{ form_end(form) }}





